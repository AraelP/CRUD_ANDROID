<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePokeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_pokemon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Pokémon"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_pokemon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Pokémon"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_pokemon_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nivel del Pokémon"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_update_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar Pokémon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>